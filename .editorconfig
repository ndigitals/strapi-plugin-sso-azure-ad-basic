root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.js,*.json}]
charset = utf-8
indent_style = space
indent_size = 2

[{.babelrc,.eslintrc}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
